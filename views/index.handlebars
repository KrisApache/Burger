<nav>
  <div class="nav-wrapper ">
    <a href="#" class="brand-logo center">Eat-Da-Burger</a>
  </div>
</nav>
<br>

<div class="center-align">
  <img src="./assets/images/burger.jpg" alt="Burger" height="160" width="220" class="center-align">
</div>

<div class="row center-align">
  <div class="col m3"></div>
  <div class="col s12 m6 center-align">
    <div class="card blue-grey darken-1 center-align">
      <div class="card-content white-text center-align">
        <span class="card-title">Burgers Available</span>

        {{!--
        <div class="row">
          <h4 class="center-align heading">Burgers Available!</h4>
        </div> --}}

        <ul>
          {{#each burger}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>

      </div>
    </div>
  </div>
</div>

<div class="row center-align">
  <div class="col m3"></div>
  <div class="col s12 m6 center-align">
    <div class="card blue-grey darken-1 center-align">
      <div class="card-content white-text center-align">
        <span class="card-title">Burgers Devoured</span>

        {{!--
        <h4 class="center-align heading">Burgers Devoured!</h4> --}}

        <ul>
          {{#each burger}} {{#if devoured}} {{> burgers/burger-devoured devoured=false}} {{/if}} {{/each}}
        </ul>

      </div>
    </div>
  </div>
</div>


<br>
<div class="row center-align">
  <div class="col m3"></div>
  <div class="col s12 m6">
    <div class="card blue-grey darken-1 center-align">
      <div class="card-content white-text center-align">
        <span class="card-title">Add a Burger</span>
        <form class="create-form">

          <div class="form-group center-align">
            <div class="col m3"></div>
            <div class="input-field col s6">
              <label for="ca">Burger Name</label>
              <input type="text" id="ca" name="name">
            </div>
          </div>

          <button type="submit" class="waves-effect waves-light btn">
            <i class="material-icons prefix">add_circle</i>
          </button>
        </form>
        <br>
      </div>
    </div>
  </div>
</div>